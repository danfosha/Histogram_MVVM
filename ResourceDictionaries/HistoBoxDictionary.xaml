<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="C:\Users\dani9096\Documents\Visual Studio 2015\Projects\Histogram_MVVM\ResourceDictionaries\HistoBoxDictionary.xaml">


    <Style x:Key="histoGroupBox"
           TargetType="GroupBox">
        <Setter Property="BorderThickness"
                Value="0" />
    </Style>

    <Style x:Key="histoBoxBorder"
           TargetType="Border">
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="Black" />
        <Setter Property="Background"
                Value="White" />
        <Setter Property="Margin"
                Value="4" />
    </Style>
    
    <Style x:Key="histoPolygon"
           TargetType="Polygon">
        <Setter Property="Stretch"
                Value="Fill" />
        <Setter Property="Opacity"
                Value="0.8" />
    </Style>

</ResourceDictionary>